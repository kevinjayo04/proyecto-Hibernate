<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.0">
    <persistence-unit name="default">

        <!-- Clases mapeadas -->
        <class>hibernateAPP.Alegacion</class>
        <class>hibernateAPP.Favorito</class>
        <class>hibernateAPP.Informe</class>
        <class>hibernateAPP.Notificacion</class>
        <class>hibernateAPP.Proyecto</class>
        <class>hibernateAPP.Usuario</class>

        <!-- Propiedades adicionales -->
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/proyectohibernate"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="hibernate.show_sql" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
